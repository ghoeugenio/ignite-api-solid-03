{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020"
  },
  "include": ["**/*.ts", "**/*.spec.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
